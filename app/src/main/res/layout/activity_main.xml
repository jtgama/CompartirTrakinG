<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="boton1"
            android:id="@+id/buttonshare"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/twitter"
            android:id="@+id/button2"
            android:layout_below="@+id/buttonshare"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp">

        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/whatsapp"

            android:layout_alignTop="@id/buttonshare"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_toStartOf="@id/buttonshare"
            android:layout_toLeftOf="@id/buttonshare">

        </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:layout_marginBottom="-7dp"
        android:layout_alignTop="@id/button2"
        android:layout_toRightOf="@id/buttonshare"
        android:layout_toEndOf="@id/buttonshare"
        android:background="@drawable/facebook">


    </Button>


</RelativeLayout>

